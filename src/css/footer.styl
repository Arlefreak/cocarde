footer
    text-align center
    margin 80px auto 0 auto
    @media screen and (max-width: 768px)
        font-size 0.8em
        margin 50px auto 0 auto
    p
        display inline-block
        &:first-child
            margin 10px 10% 10px 0
        &:last-child
            margin 10px 0 10px 10%
        @media screen and (max-width: 980px)
            width 100%
            display block
            &:first-child
                margin 10px auto 10px auto
            &:last-child
                margin 10px auto 10px auto

